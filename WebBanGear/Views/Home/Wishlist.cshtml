@model IEnumerable<WishlistModel>
@{
    ViewData["title"] = "Wish List";
    var key = 0;
}
<h3>Danh sách yêu thích</h3>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wishlistItem in Model)
        {
            key++;
            <tr>
                <td>@key</td>
                <td>@wishlistItem.Product.Name</td>
                <td>@Html.Raw(wishlistItem.Product.Description)</td>
                <td>@String.Format("{0:0,0} VNĐ", wishlistItem.Product.Price)</td>
                <td><img src="@Url.Content("~/media/products/" + wishlistItem.Product.Image)" width="120"></td>
                <td>
                    <a asp-action="DeleteWishlist" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Home" asp-route-Id="@wishlistItem.Product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
