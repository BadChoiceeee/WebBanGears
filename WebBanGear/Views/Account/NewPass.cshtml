@model AppUserModel
@{
    ViewData["Title"] = "New Password";
}

<section id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="login-form">
                    <h2>New Password</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="UpdateNewPassword" asp-controller="Account">
                        <input type="hidden" name="token" value="@ViewBag.Token" />
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" readonly value="@ViewBag.Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="PasswordHash" class="form-control" />
                            <span asp-validation-for="PasswordHash" class="text-danger" />
                        </div>


                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Send</button>
                        </div>
                    </form>
                    <p> <a asp-action="Create" asp-controller="Account">Tạo tài khoản</a>.</p>

                </div>
            </div>
        </div>
    </div>
</section>
